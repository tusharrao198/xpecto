    <style>
        .content {
            font-size: 1.25rem;
            padding: 0;
            line-height: 1.75;
        }

        .card .heading {
            font-size: 3rem;
            font-weight: bold;
            margin-bottom: 1.5rem;
            text-align: center;
        }
        .card {
            display: flex;
            flex-direction: column;
            align-items: center;
            color: white;
            width: 100vw;
            /* height: 50vh; */
            margin: auto;
            /* text-align:justify; */
        }
        /* Glassmorphism card effect */
        .card {
            padding: 2rem;
            backdrop-filter: blur(7.5px) saturate(200%);
            -webkit-backdrop-filter: blur(7.5px) saturate(200%);
            background-color: rgba(0, 0, 0, 0.5);
            border-radius: 12px;
            border: 1px solid rgba(255, 255, 255, 0.125);
            box-shadow: 0 0 50px 10px rgba(255, 255, 255, 0.125);
        }
        @media (max-width: 500px) {
            .showcase {
                padding: 100px 50px;
            }
            .card .heading {
                font-size: 2rem;
                margin-bottom: 0;
            }
            .content {
                /* padding-top: 0; */
                font-size: 0.9rem;
                line-height: 1.5rem;
            }
        }
        @media screen {
            .card {
                margin-top: 2rem;
            }
            .showcase {
                padding-bottom: 50px;
            }
        }
        #about {
            /* color: white; */
            color: #03a9f4;
            font-weight: bold;
        }
    </style>

    <body>
        <div class="bg"></div>
